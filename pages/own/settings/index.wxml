<van-cell-group>
<view class="padding-5">
  <van-field
    value="{{ password }}"
    label="输入新密码"
    placeholder="请输入密码" 
    bind:blur="setusername"
    border="{{ false }}"
  />
  <van-field
    value="{{ password2 }}"
    label="再次输入密码"
    placeholder="请输入密码"
    bind:click-icon="psh"
    bind:blur="setpassword"
    border="{{ false }}"
  />
  <view style="margin:50rpx 0 0 0">
    <van-button 
      type="primary" 
      size="large" 
      round
      color="#2f97ff"
      bind:click=""
      >
      保存
    </van-button>
  </view>
</view>
</van-cell-group>